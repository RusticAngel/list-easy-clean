<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- REQUIRED for Supabase, OneSignal, any network calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional but recommended for production: allow cleartext traffic only if you have non-HTTPS endpoints -->
    <!-- <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" /> -->
    <!-- <application android:usesCleartextTraffic="true"> ... </application> -->

    <application
        android:name="${applicationName}"
        android:label="List Easy"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/LaunchTheme"
        android:resizeableActivity="false">

        <!-- YOUR REAL ADMOB APP ID â€” LIVE & WORKING -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1957460965962453~9862917268"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Launcher intent-filter (already there) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- NEW: Deep link intent-filter for shared shopping lists -->
            <!-- Opens https://app.listeasy.com/share/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx links directly in the app -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="app.listeasy.com"
                    android:pathPrefix="/share" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

</manifest>